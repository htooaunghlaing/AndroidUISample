<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="150dp"
                android:height="100dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Colored Rectangle -->
    <item
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp">

            </corners>
            <size
                android:width="150dp"
                android:height="100dp" />
            <solid android:color="@color/colorPrimarybg" />
        </shape>
    </item>

    <!-- Bottom Triangle -->
    <item
        android:left="45dp"
        android:right="55dp"
        android:top="0dp"
        android:bottom="15dp">

        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimarybg" />
            </shape>
        </rotate>
    </item>

</layer-list>